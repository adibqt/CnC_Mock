# Full-Stack Docker Environment Variables
# Copy this to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=click_and_care
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8000

# Frontend Configuration
FRONTEND_PORT=80

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-must-be-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Gemini AI API Key (for AI consultation features)
GEMINI_API_KEY=your-gemini-api-key-here

# LiveKit Configuration (for video calls)
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server.livekit.io

# Environment
ENVIRONMENT=development

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@clickandcare.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
